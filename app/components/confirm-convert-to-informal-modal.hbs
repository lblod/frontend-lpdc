<AuModal
  @modalOpen={{true}}
  @closeModal={{this.close}}
  data-test-confirm-convert-to-informal-modal="modal"
>
  <:title>Instantie automatisch omzetten naar de je-vorm?</:title>
  <:body>
    De instantie wordt automatisch omgezet naar de je-vorm en in status "Ontwerp" klaargezet.
    Kijk de inhoud na, en verzend de instantie dan opnieuw naar de Vlaamse overheid.
  </:body>
  <:footer>
    <AuButtonGroup>
      <AuButton
        @icon="pencil"
        @iconAlignment="left"
        @disabled={{this.convertToInformal.isRunning}}
        @loading={{this.convertToInformal.isRunning}}
        @loadingMessage="Aan het converteren"
        {{on "click" (perform this.convertToInformal)}}
        data-test-confirm-convert-to-informal-modal="convert-button"
      >
        Doorgaan
      </AuButton>
      <AuButton
        @skin="secondary"
        @disabled={{this.convertToInformal.isRunning}}
        {{on "click" this.close}}
        data-test-confirm-convert-to-informal-modal="cancel-button"
      >
        Annuleer
      </AuButton>
    </AuButtonGroup>
  </:footer>
</AuModal>