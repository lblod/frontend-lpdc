<div class="au-u-flex">
  <AuHeading @level={{this.level}} @skin={{this.skin}}>
    {{@field.label}}
    {{#if (and this.tooltipText (not @show))}}
      <AuTooltip @placement="bottom" as |tooltip|>
        {{! template-lint-disable no-inline-styles }}
        <span
          style="vertical-align: middle; cursor: pointer;"
          {{tooltip.target}}
        >
          <AuIcon @icon="question-circle" @size="large" />
        </span>
        <tooltip.Content>
          {{this.tooltipText}}
        </tooltip.Content>
      </AuTooltip>
    {{/if}}
  </AuHeading>
  {{#if this.showPill}}
    <AuPill
      class="au-u-flex-self-center au-u-margin-tiny"
      @skin="warning"
      @size="regular"
      @icon="alert-triangle"
    >
      {{this.pillText}}
    </AuPill>
    <AuLinkExternal href={{this.ipdcConceptCompareLink}} target="blank">
      Bekijk conceptwijzigingen
    </AuLinkExternal>
  {{/if}}
</div>

{{#if (and this.subTitleHelpText (not @show))}}
  <AuHelpText @size="normal" @skin="secondary">
    {{! template-lint-disable no-triple-curlies }}
    {{{this.subTitleHelpText}}}
  </AuHelpText>
{{/if}}