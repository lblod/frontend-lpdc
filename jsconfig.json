{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "frontend-lpdc/*": ["./app/*"],
      "frontend-lpdc/config/environment": ["./app/config/environment"], // Helps autocomplete the config path even though the file doesn't exist on disk
      "frontend-lpdc/tests/*": ["./tests/*"]
    },
    "target": "es6"
  },
  "exclude": ["dist", "node_modules", "vendor"]
}
